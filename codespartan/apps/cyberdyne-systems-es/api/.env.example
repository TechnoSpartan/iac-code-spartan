# Backend Environment Variables - PRODUCCIÓN
PORT=3001
NODE_ENV=production

# CORS - Orígenes permitidos (separados por coma)
ALLOWED_ORIGINS=https://cyberdyne-systems.es,https://www.cyberdyne-systems.es,https://staging.cyberdyne-systems.es,https://lab.cyberdyne-systems.es,https://api.cyberdyne-systems.es

# MongoDB Configuration (IMPORTANT: Replace with secure passwords)
MONGODB_ROOT_USERNAME=truckworks
MONGODB_ROOT_PASSWORD=change_me_in_production_use_secure_password_min_32_chars
MONGODB_DATABASE=trackworks

# Database
DB_PATH=./data/truckworks.db
USE_DATABASE=true

# API Configuration
API_BASE_PATH=/api
API_VERSION=v1

# Frontend URL
FRONTEND_URL=https://www.cyberdyne-systems.es

# Logging
LOG_LEVEL=info
